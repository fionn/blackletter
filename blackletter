#!/usr/bin/env perl

use strict;
use warnings;
use utf8;
use open ":std", ":encoding(UTF-8)";

my $latin_upper = join("", ("A".."Z"));
my $latin_lower = join("", ("a".."z"));
my $bl_upper = "ğ”„ğ”…â„­ğ”‡ğ”ˆğ”‰ğ”Šâ„Œâ„‘ğ”ğ”ğ”ğ”ğ”‘ğ”’ğ”“ğ””â„œğ”–ğ”—ğ”˜ğ”™ğ”šğ”›ğ”œâ„¨";
my $bl_lower = "ğ”ğ”Ÿğ” ğ”¡ğ”¢ğ”£ğ”¤ğ”¥ğ”¦ğ”§ğ”¨ğ”©ğ”ªğ”«ğ”¬ğ”­ğ”®ğ”¯ğ”°ğ”±ğ”²ğ”³ğ”´ğ”µğ”¶ğ”·";

while (<>) {
    eval "tr/$latin_upper$latin_lower/$bl_upper$bl_lower/;";
    print "$_";
}
